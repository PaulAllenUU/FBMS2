@model IList<Stock>

<partial name="_BreadCrumbs" model=@(new [] {
    ("/", "Home"),
    ("", "Stock")
})/>

<h3 class="mb-3">Stock List</h3>

<a class="btn btn-sm btn-primary my-3" asp-action="Create">
    <i class="bi bi-plus"></i> Create
</a>

<a class="btn btn-outline-success my-3" type="submit" asp-action="Query" >
    <i class="bi-search"></i> Search Stock
</a>

<table class="table table-hover">

    <thead>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>ExpiryDate</th>
            <th>Quantity</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Description</td>
                <td>@s.ExpiryDate</td>
                <td>@s.Quantity</td>
                <td>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="View Stock Item" asp-controller="Stock" asp-action="Details" asp-route-id=@s.Id><i class="bi bi-display"></i></a>
                    <a asp-action="Edit" asp-route-id=@s.Id><i class="bi bi-pen"></i></a>
                    <a asp-action="Delete" asp-route-id=@s.Id><i class="bi bi-trash"></i></a>
                </td>

            </tr>
            
        }
    </tbody>

</table>


