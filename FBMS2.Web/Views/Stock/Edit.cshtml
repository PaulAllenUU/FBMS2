@model Stock

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/stock","Stock"),
    ($"/student/details/{Model.Id}",$"{Model.Id}"),
    ("","Edit")
}) />

<h3 class="my-4">Edit Stock Item</h3>

<div class="card rounded shadow p-3">
    
    <form asp-action="Edit">
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!--hide the id as it is not user editable so not necessary to see -->
        <input type="hidden" asp-for="Id" class="form-control"/>

        <div class="mt-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="ExpiryDate" class="form-label"></label>
            <input asp-for="ExpiryDate" class="form-control"/>
            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control"/>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <input type="submit" value="Save" class="btn btn-primary"/>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>

    </form>